<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userOptionPage"
    style="@style/matchParentHeightAndWidth"
    android:background="@color/appBackground"
    tools:context=".AddFragment">

    <RelativeLayout
        android:id="@+id/addPageRelativeView"
        style="@style/matchParentHeightAndWidth"
        android:visibility="visible">

        <TextView
            style="@style/HeaderText"
            android:text="@string/userOption"
            android:id="@+id/question" />

        <Button
            android:id="@+id/bt_addView"
            style="@style/MediumButtons"
            android:text="@string/createCourseButtonText"
            android:layout_below="@id/question" />

<!--        fix button styling after    -->
        <Button
            android:id="@+id/bt_joinView"
            style="@style/MediumButtons"
            android:text="@string/joinCourseButtonText"
            android:layout_below="@id/bt_addView" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/courseAddRelativeView"
        style="@style/matchParentHeightAndWidth"
        android:visibility="invisible">

        <EditText
            android:id="@+id/et_courseID"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/courseIDHelperText"
            android:textSize="30sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:padding="10dp"
            android:background="@drawable/edit_bg"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/et_classToAdd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/joinCourseSuccessText"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@drawable/edit_bg"
            android:layout_below="@id/et_courseID"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/bt_addCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_classToAdd"
            android:layout_margin="10dp"
            android:background="@drawable/btn_bg"
            android:layout_centerHorizontal="true"
            android:text="@string/createCourseButtonText" />

        <TextView
            android:id="@+id/tv_classInfo"
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/bt_addCourse"
            android:text="@string/test_classNameDefault"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/classJoinCodeInfo"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_below="@id/tv_classInfo"
            android:text="@string/joinCourseSuccessText"
            android:textSize="25sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/classJoinCode"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_below="@id/classJoinCodeInfo"
            android:text="@string/test_inviteCodeDefault"
            android:textSize="30sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/backAddView"
            style="@style/BackViewStandard" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/joinCourseRelativeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/joinPageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inviteCodeHeaderText"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_margin="70dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/et_joinCourseView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_below="@id/joinPageText"
            android:hint="@string/inviteCodeEditTextHint"
            android:textColorHint="@color/white"
            android:background="@drawable/edit_bg"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/bt_joinCourse"
            android:layout_below="@id/et_joinCourseView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/joinCourseButtonText"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp" />

        <TextView
            android:id="@+id/tv_joinSuccessView"
            android:layout_below="@+id/bt_joinCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/joinCourseSuccessText"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:visibility="invisible"
            android:layout_margin="20dp" />

        <ImageView
            android:id="@+id/backJoinView"
            style="@style/BackViewStandard" />

    </RelativeLayout>

</FrameLayout>