<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBackground"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CardView"
        app:cardElevation="7dp"
        android:id="@+id/classCardView"
        app:cardBackgroundColor="@color/teal_700"
        android:layout_margin="20dp">
<!--        android:layout_below="@id/ClassesTitle"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CourseTitle"
            android:text="@string/course_1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_class"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/classCardView"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:text="@string/number_of_events_in_the_classroom"
        android:textSize="25sp"
        android:id="@+id/tv_eventNumber"/>




</RelativeLayout>