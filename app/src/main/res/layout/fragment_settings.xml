<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsPage"
    style="@style/matchParentHeightAndWidth"
    tools:context=".SettingsFragment"
    android:background="@color/appBackground">

    <!-- TODO: adjust the UI (make it material Looking by replacing layout elements to material ones,
                - try to implement the photo logic if possible !-->

    <RelativeLayout
        android:id="@+id/rv_userSettings"
        style="@style/matchParentHeightAndWidth"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_userAvatar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/profile_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <ImageView
            android:id="@+id/iv_changeUserAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg"
            android:layout_below="@id/iv_userAvatar"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/iv_changeUserAvatar"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_userFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_below="@id/tv_userName"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_userEmail"
            android:layout_below="@id/tv_userFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_userStudentNumber"
            android:layout_below="@id/tv_userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <Button
            android:id="@+id/bt_switchlanguage"
            style="@style/Buttons"
            android:layout_below="@id/bt_editProfileProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:text="@string/switch_language" />

        <Button
            android:id="@+id/bt_editProfileProfile"
            style="@style/Buttons"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_userStudentNumber"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/editUserInfoButtonText"
            />

        <Button
            android:id="@+id/bt_logoutButtonProfile"
            style="@style/Buttons"
            android:layout_below="@+id/bt_switchlanguage"
            android:text="@string/logOutButtonText"
            android:layout_centerHorizontal="true"/>
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/bt_editProfileProfile"
            android:text="@string/logOutButtonText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_editUserSettingsPage"
        style="@style/matchParentHeightAndWidth"
        android:layout_margin="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_backToUserProfile"
            style="@style/BackViewStandard" />

        <TextView
            android:id="@+id/profileSettingsHeaderText"
            style="@style/GenericText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textSize="30dp"
            android:text="@string/settings_profileSettingsHeaderText"/>

        <LinearLayout
            android:id="@+id/linLayout_userInformationHeaderText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="250dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_userNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userNameHelperText"
                android:layout_marginBottom="47dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userFirstNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userFirstNameHelperText"
                android:layout_marginBottom="40dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userMiddleNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userMiddleNameHelperText"
                android:layout_marginBottom="43dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userLastNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userLastNameHelperText"
                android:layout_marginBottom="40dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userEmailNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userEmailHelperText"
                android:layout_marginBottom="30dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userStudentNumberHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userStudentNumberNameHelperText"
                android:layout_marginBottom="25dp"
                android:textSize="18sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rv_userCurrentInformation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="120dp"
            android:layout_marginTop="150dp">

            <LinearLayout
                android:id="@+id/linLayout_userCurrentInformation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userMiddleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:right="120dp"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:right="120dp"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:right="120dp"
                        android:layout_marginBottom="3dp"
                        android:inputType="textEmailAddress"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userStudentNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:right="120dp"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/bt_saveUserProfileChanges"
            style="@style/Buttons"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="555dp"
            android:text="@string/settings_saveProfileChangesButtonText"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linLayout_userAvatarSettingsMenu"
        android:layout_width="300dp"
        android:elevation="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        android:background="@drawable/bottom_sheet_style"
        app:behavior_peekHeight="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_userAvatarTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GenericText"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/settings_userAvatarTakePhoto" />

        <TextView
            android:id="@+id/tv_userAvatarCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GenericText"
            android:textSize="22sp"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/settings_userAvatarCancel" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>