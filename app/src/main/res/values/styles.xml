<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderText">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="GenericText">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextStandard">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/edit_bg</item>
        <!-- <item name="android:background">@drawable/btn_bg</item> -->
    </style>

    <style name="Buttons">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">175dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="SmallButtons">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="wrapHeightAndWidth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="matchParentHeightAndWidth">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="centerVerticalAndHorizontal">
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
