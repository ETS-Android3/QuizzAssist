<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/classRoom"
    style="@style/matchParentHeightAndWidth"
    android:background="@color/appBackground"
    tools:context=".ClassRoom">
    
    <LinearLayout
        android:id="@+id/parentLinearLayout_activity_classroom"
        android:orientation="vertical"
        style = "@style/matchParentHeightAndWidth">

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_addEvent"
                style="@style/wrapHeightAndWidth"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="290dp"
                android:text="Add Event"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_courseNameDisplay"
                style = "@style/wrapHeightAndWidth"
                android:text="Course Name"
                android:textSize="40sp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/tv_eventsCountDisplay"
                style = "@style/wrapHeightAndWidth"
                android:text="# of Events"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_below="@id/tv_courseNameDisplay">


            </TextView>

        </RelativeLayout>

        <GridLayout
            android:id="@+id/gridLayout_activity_classroom"
            android:columnCount="1"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                style="@style/wrapHeightAndWidth"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                >

                <LinearLayout
                    style="@style/matchParentHeightAndWidth"
                    android:padding="16dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        style="@style/wrapHeightAndWidth"
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp"
                        android:text="Event Number"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/wrapHeightAndWidth"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                >

                <LinearLayout
                    style="@style/matchParentHeightAndWidth"
                    android:padding="16dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/penis"
                        style="@style/wrapHeightAndWidth"
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp"
                        android:text="Event Number"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>



    </LinearLayout>

</LinearLayout>