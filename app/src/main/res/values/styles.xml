<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderText">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">60sp</item>
        <item name="android:layout_margin">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/tinos</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GenericText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <style name="EditTextStandard">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:layout_centerHorizontal">true</item>
        <!-- <item name="android:background">@drawable/btn_bg</item> -->
    </style>

    <style name="BackViewStandard">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:src">@drawable/back_icon</item>
        <item name="android:layout_margin">20sp</item>
    </style>

    <style name="EditTextStandard_Test">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:layout_centerHorizontal">true</item>
        <!-- <item name="android:background">@drawable/btn_bg</item> -->
    </style>

    <style name="Buttons">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">175dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MediumButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SmallButtons">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="wrapHeightAndWidth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="matchParentHeightAndWidth">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="centerVerticalAndHorizontal">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>