<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeFragment"
    style="@style/matchParentHeightAndWidth"
    tools:context=".HomeFragment"
    android:background="@color/appBackground">

    <RelativeLayout
        android:id="@+id/coursesView"
        style="@style/matchParentHeightAndWidth"
        tools:context=".ClassRoom"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerSectionHome">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:src="@drawable/profile_icon"
                android:layout_alignParentRight="true"
                android:layout_margin="30dp"
                android:background="@drawable/btn_bg"/>

            <TextView
                android:text="@string/homeFtCourseTV"
                style="@style/GenericText"
                android:textSize="25sp"
                android:layout_margin="50dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/headerSectionHome">
                <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridLayout
                        android:id="@+id/gridLayout_activity_home"
                        android:columnCount="2"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </GridLayout>
                </ScrollView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/course_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/GenericText"
                            android:text="@string/courseCardText"/>
            </LinearLayout>

    </RelativeLayout>
    

    <LinearLayout
        android:id="@+id/classRoom"
        style="@style/matchParentHeightAndWidth"
        tools:context=".ClassRoom"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/parentLinearLayout_activity_classroom"
            android:orientation="vertical"
            style = "@style/matchParentHeightAndWidth">
            <RelativeLayout
                android:layout_marginTop="32dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_addEvent"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="290dp"
                    android:text="Add Event"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_courseNameDisplay"
                    style="@style/matchParentHeightAndWidth"
                    android:text="Course Name"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tv_eventsCountDisplay"
                    style = "@style/matchParentHeightAndWidth"
                    android:text="# of Events"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_below="@id/tv_courseNameDisplay">

                </TextView>

            </RelativeLayout>

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                    android:id="@+id/gridLayout_activity_classroom"
                    android:columnCount="1"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </GridLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/createQuestion"
        android:visibility="invisible">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionCreationTitle"
            android:text="@string/createQuestionTitle"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_margin="40dp"
            android:textAlignment="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createQuestionLayout"
            android:layout_below="@id/questionCreationTitle"
            android:layout_margin="20dp"
            android:hint="@string/createQuestionHint"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/icon_question"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_questionToAdd" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/courseLinkLayout"
            android:layout_below="@id/createQuestionLayout"
            android:layout_margin="20dp"
            android:hint="@string/classLinkHint"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/icon_class"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_courseLinked" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createQuestionButton"
            android:text="@string/createQuestion"
            android:layout_below="@id/courseLinkLayout"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eventCreationView">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventCreationTitle"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:id="@+id/createEventTitle"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_margin="10dp"
            android:id="@+id/startDateCardView"
            android:layout_below="@id/createEventTitle">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/startDate"
                android:id="@+id/tv_startDate"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="@drawable/icon_calendar"
                android:id="@+id/startDateButton"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_margin="10dp"
            android:id="@+id/startTimeCardView"
            android:layout_below="@id/startDateCardView">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/startTime"
                android:id="@+id/tv_startTime"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="@drawable/icon_clock"
                android:id="@+id/startTimeButton"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_margin="10dp"
            android:id="@+id/endDateCardView"
            android:layout_below="@id/startTimeCardView">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/endDate"
                android:id="@+id/tv_endDate"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:id="@+id/endDateButton"
                android:background="@drawable/icon_calendar"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_margin="10dp"
            android:id="@+id/endTimeCardView"
            android:layout_below="@id/endDateCardView">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/endTime"
                android:id="@+id/tv_endTime"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:id="@+id/endTimeButton"
                android:background="@drawable/icon_clock"/>

        </com.google.android.material.card.MaterialCardView>




        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfQuestionLayout"
            android:layout_margin="10dp"
            android:layout_below="@id/endTimeCardView"
            android:hint="@string/questionNumber"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/icon_question">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_numberOfQuestion"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classLinkedLayout"
            android:layout_margin="10dp"
            android:layout_below="@id/numberOfQuestionLayout"
            android:hint="@string/classLinkHint"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/icon_class">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_classLinked"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/classLinkedLayout"
            android:text="@string/submitButton"
            android:layout_centerHorizontal="true"
            android:id="@+id/saveEventButton"
            android:layout_margin="10dp"/>


<!--        <com.applandeo.materialcalendarview.CalendarView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:id="@+id/calendarView"-->
<!--            android:visibility="gone"/>-->

    </RelativeLayout>

</FrameLayout>
