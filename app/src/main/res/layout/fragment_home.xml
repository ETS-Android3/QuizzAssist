<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeFragment"
    style="@style/matchParentHeightAndWidth"
    tools:context=".HomeFragment"
    android:background="@color/appBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coursesView"
        style="@style/matchParentHeightAndWidth"
        tools:context=".ClassRoom"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            style = "@style/matchParentHeightAndWidth">
            <RelativeLayout
                android:layout_marginTop="32dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/profile_icon"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/btn_bg"/>

                <TextView
                    android:clickable="true"
                    android:id="@+id/test1"
                    android:text="@string/homeFtCourseTV"
                    style="@style/GenericText"
                    android:textSize="25sp"
                    android:layout_margin="20dp" />

            </RelativeLayout>


            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                    android:id="@+id/gridLayout_activity_home"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </GridLayout>
            </ScrollView>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/classRoom"
        style="@style/matchParentHeightAndWidth"
        tools:context=".ClassRoom"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/parentLinearLayout_activity_classroom"
            android:orientation="vertical"
            style = "@style/matchParentHeightAndWidth">
            <RelativeLayout
                android:layout_marginTop="32dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bt_addEvent"
                    style="@style/wrapHeightAndWidth"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="290dp"
                    android:text="Add Event"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/tv_courseNameDisplay"
                    style="@style/wrapHeightAndWidth"
                    android:text="Course Name"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"/>
            </RelativeLayout>

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                    android:id="@+id/gridLayout_activity_classroom"
                    android:columnCount="1"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </GridLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>

    //this is for the event scheduler page, still need event page
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/eventPage"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.application.datepickerexample.MainActivity"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_eventDateDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bt_scheduleEventDate"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="Date not scheduled"
            android:textSize="30sp" />
        <Button
            android:id="@+id/bt_scheduleEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_eventTimeDisplay"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Schedule Date" />

        <TextView
            android:id="@+id/tv_eventTimeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bt_scheduleEventTime"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="Time not scheduled"
            android:textSize="30sp" />
        <Button
            android:id="@+id/bt_scheduleEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bt_closeEventPage"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Schedule Time" />

        <Button
            android:id="@+id/bt_closeEventPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Back To Course" />

    </RelativeLayout>

</FrameLayout>
