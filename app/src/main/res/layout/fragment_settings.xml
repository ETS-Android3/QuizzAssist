<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsPage"
    style="@style/matchParentHeightAndWidth"
    tools:context=".SettingsFragment"
    android:background="@color/appBackground">

    <RelativeLayout
        android:id="@+id/rv_userSettings"
        style="@style/matchParentHeightAndWidth"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/avtarSection"
            android:padding="20dp"
            android:background="@drawable/roundedgradient"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/iv_userAvatar"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/account_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_bg"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_changeUserAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_toRightOf="@id/iv_userAvatar"
                android:layout_below="@id/iv_userAvatar"
                android:src="@drawable/ic_camera"
                android:background="@color/white"/>
        </RelativeLayout>



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/avtarSection"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_userFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_below="@id/tv_userName"
            android:layout_centerHorizontal="true"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_userEmail"
            android:layout_below="@id/tv_userFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_userStudentNumber"
            android:layout_below="@id/tv_userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/bt_editProfile"
            style="@style/Buttons"
            android:layout_below="@id/tv_userStudentNumber"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/editUserInfoButtonText"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/bt_logoutButton"
            style="@style/Buttons"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/bt_editProfile"
            android:text="@string/logOutButtonText"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_editUserSettingsPage"
        style="@style/matchParentHeightAndWidth"
        android:layout_margin="20dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_backToUserProfile"
            style="@style/BackViewStandard" />

        <TextView
            android:id="@+id/profileSettingsHeaderText"
            style="@style/GenericText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textSize="30dp"
            android:text="@string/settings_profileSettingsHeaderText"/>

        <LinearLayout
            android:id="@+id/linLayout_userInformationHeaderText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="250dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_userNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userNameHelperText"
                android:layout_marginBottom="47dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userFirstNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userFirstNameHelperText"
                android:layout_marginBottom="40dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userMiddleNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userMiddleNameHelperText"
                android:layout_marginBottom="43dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userLastNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userLastNameHelperText"
                android:layout_marginBottom="40dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userEmailNameHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userEmailHelperText"
                android:layout_marginBottom="30dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_userStudentNumberHelperText"
                style="@style/GenericText"
                android:text="@string/settings_userStudentNumberNameHelperText"
                android:layout_marginBottom="25dp"
                android:textSize="18sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rv_userCurrentInformation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="120dp"
            android:layout_marginTop="150dp">

            <LinearLayout
                android:id="@+id/linLayout_userCurrentInformation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userMiddleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:right="120dp"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:right="120dp"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:right="120dp"
                        android:layout_marginBottom="3dp"
                        android:inputType="textEmailAddress"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_et_userStudentNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:right="120dp"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/bt_saveUserProfileChanges"
            style="@style/Buttons"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="570dp"
            android:text="@string/settings_saveProfileChangesButtonText"/>

    </RelativeLayout>

</FrameLayout>